<%= content_tag :h1, @product.name, class: 'post_name' %>
<%= content_tag :h3, "Price:" %>
<%= content_tag :p, "$#{@product.price}", class: 'post_price' %>
<%= content_tag :h3, "Inventory:" %>
<%= content_tag :p, @product.inventory, class: 'post_inventory' %>
<%= content_tag :h3, "Description:" %>
<%= content_tag :p, @product.description, class: 'post_description' %>
<%= link_to "Next Product", "#", class: 'js-next', data: {id: @product.id} %>

<script type="text/javascript" charset="utf-8">
  $(function() {
    $(".js-next").on("click", function(e){
      var nextId = parseInt($(".js-next").attr("data-id")) + 1;
      $.getJSON("/products/"+nextId+"/data", function(data){
        $(".post_name").text(data["name"]);
        $(".post_price").text(data["price"]);
        $(".post_inventory").text(data["inventory"]);
        $(".post_description").text(data["description"]);
        $(".js-next").attr("data-id", data["id"]);
      });
    });
  });
</script>
